#include <stdio.h>
  
int Potenciacao(int x, int y){
  if(y==0){
    return 1;
  } else{
    return x*CalculaExpoente(x, y-1);
  }
  
}

int main(){
  double base, expoente;
  printf("Informe a base e o expoente");
  scanf("%d %d", &base, &expoente);
  printf("%d elevado a %d Ã© igual a %d", base, expoente, potenciacao(base, expoente);

return 0;
}
