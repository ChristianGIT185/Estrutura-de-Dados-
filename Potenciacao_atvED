#include <stdio.h>
int Potenciacao(int x, int y){  // Supondo que x Ã© a base e y o expoente
    if(y==0){
        return 1;
    } else{
        return x * Potenciacao(x, y-1);
    }

    
}
int main()
{
    int base, expoente;
    printf("Informe o valor da base e o expoente:\n");
    scanf("%i %i", &base, &expoente);
    
    printf("%d^%d = %d\n", base, expoente, Potenciacao(base, expoente));

    return 0;
}
